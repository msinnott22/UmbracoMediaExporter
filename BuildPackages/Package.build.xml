    <Target Name="NuGetManifest" DependsOnTargets="PrepareFiles">
       <ItemGroup> 
        <ManifestFiles Include="$(BuildNuGetDir)\**\*" Exclude="$(BuildNuGetDir)\MediaExporter.nuspec" />
       </ItemGroup>
       <!-- <MSBuild.NuGet.Tasks.ManifestUpdate 
            ManifestFile="$(BuildNuGetDir)\MediaExporter.nuspec"
